<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
  <package name="post" namespace="/post" extends="nologin" strict-method-invocation="false">

    <global-results>
      <result name="post/*" type="redirect">/post/index/{1}</result>
      <result name="json" type="json"/>
    </global-results>

    <action name="post_*" class="postAction" method="{1}">
      <result name="success">index</result>
    </action>

    <action name="index" class="postAction"> <!-- TODO 可能会改成Route -->
      <result>/WEB-INF/post/index.jsp</result>
    </action>

    <action name="add" class="postAction"> <!-- TODO 可能会改成Route -->
      <result>/WEB-INF/post/add.jsp</result>
    </action>

    <action name="modify" class="postAction"> <!-- TODO 可能会改成Route -->
      <result>/WEB-INF/post/modify.jsp</result>
    </action>


  </package>
</struts>